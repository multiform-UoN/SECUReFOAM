{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

convertToMeters 1;

L 3;
D 2;
H 0.1;

vertices
(
    (0 0 0)
    ($L 0 0)
    ($L $D 0)
    (0 $D 0)
    (0 0 $H)
    ($L 0 $H)
    ($L $D $H)
    (0 $D $H)
);

blocks
(
    hex (0 1 2 3 4 5 6 7 ) (100 200 1) simpleGrading (1 1 1)
);

edges
(
);

boundary
(
    inlet
    {
        type patch;
        faces
        (
            (0 3 7 4)
        );
    }
    outlet
    {
        type patch;
        faces
        (
            (1 5 6 2)
        );
    }
    upperWall
    {
        type wall;
        faces
        (
            (3 2 6 7)
        );
    }
    lowerWall
    {
        type wall;
        faces
        (
            (0 4 5 1)
            (0 1 2 3)
            (4 5 6 7)
        );
    }
);

mergePatchPairs
(
);


