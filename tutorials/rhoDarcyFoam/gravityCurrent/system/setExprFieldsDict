expressions
(
    T
    {
        field T;
        dimensions [0 0 0 1 0 0 0];

        variables
        (
            "Lx = 15"
            "xini = Lx / 5"
        );

        expression
        #{
            0.5 * (1 - tanh(100*(pos().z() - xini)))
        #};
    }
);