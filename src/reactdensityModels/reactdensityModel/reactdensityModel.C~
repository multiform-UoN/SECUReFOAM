#include "reactdensityModel.H"

// * * * * * * * * * * * * * * Static Data Members * * * * * * * * * * * * * //

namespace Foam
{
  namespace reactdensityModels
  {
    defineTypeNameAndDebug(reactdensityModel, 0);
    defineRunTimeSelectionTable(reactdensityModel, dictionary);
  }
}

using namespace Foam;
// * * * * * * * * * * * * * * * * Constructors  * * * * * * * * * * * * * * //

reactdensityModels::reactdensityModel::reactdensityModel
(
    const dictionary& dict,
    const volScalarField& cA,
    const volScalarField& cB,
    const volScalarField& cC,
    volScalarField& rho,
    volScalarField& drhodC
)
    :
    dict_(dict),
    cA_(cA),
    cB_(cB),
    cC_(cC),
    rho_(rho),
    drhodC_(drhodC)
{}

/*------------------------  Member functions----------------------------------*/


tmp<scalarField> reactdensityModels::reactdensityModel::rho()
{
  return rho(cA_, cB_, cC_);
}

tmp<scalarField> reactdensityModels::reactdensityModel::rho(const volScalarField& cA)
{
  return rho(cA.field(), cB.field(), cC.field());
}

tmp<scalarField> reactdensityModels::reactdensityModel::drhodC()
{
  return drhodC(cA_);
}

tmp<scalarField> reactdensityModels::reactdensityModel::drhodC(const volScalarField& cA)
{
  return drhodC(cA.field());
}


void reactdensityModels::reactdensityModel::correctRho()
{
  rho_.field() = rho();
  forAll (rho_.boundaryField(), patchI)
    {
      rho_.boundaryFieldRef()[patchI] = rho(cA_.boundaryField()[patchI]);
    }
}


void reactdensityModels::reactdensityModel::correctDrhodC()
{
  drhodC_.field() = drhodC();
  forAll (drhodC_.boundaryField(), patchI)
    {
      drhodC_.boundaryFieldRef()[patchI] = drhodC(cA_.boundaryField()[patchI]);
    } 
}


void
reactdensityModels::reactdensityModel::write(Ostream& os) const
{
	dict_.write(os);
}

// ************************************************************************* //
